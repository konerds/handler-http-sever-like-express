{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@http": ["src/core/http"],
      "@handler": ["src/handler"],
      "@config": ["src/config"],
      "@logger": ["src/logger"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2021"]
  },
  "include": ["src"]
}
