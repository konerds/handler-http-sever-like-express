{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config": ["src/config"],
      "@express": ["src/core/express"],
      "@http": ["src/core/http"],
      "@logger": ["src/logger"],
      "@middlewares": ["src/middlewares"],
      "@routes": ["src/routes"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2021"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "__tests__"]
}
